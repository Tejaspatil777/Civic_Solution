{
  "name": "civicfix-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Complete CivicFix platform with web and mobile applications",
  "scripts": {
    "web:dev": "cd web-app && npm run dev",
    "web:build": "cd web-app && npm run build",
    "web:preview": "cd web-app && npm run preview",
    "mobile:start": "cd mobile-app && expo start",
    "mobile:ios": "cd mobile-app && expo start --ios",
    "mobile:android": "cd mobile-app && expo start --android",
    "install:all": "npm run install:web && npm run install:mobile",
    "install:web": "cd web-app && npm install",
    "install:mobile": "cd mobile-app && npm install",
    "setup": "npm run install:all"
  },
  "workspaces": [
    "web-app",
    "mobile-app"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}